#include "main.h"
/**
 * print_sign - prints the sign of a number.
 *@n : the number to check
 * Return: 1 if it is +ve, 0 if it is 0, otherwise -1.
 */
int print_sign(int n)
{
	if (n > 0)
	{
		_putchar('+');
		return (1);
	}
	else if (n < 0)
	{
		_putchar('-');
		return -1;
	}
	_putchar('0');
	return (0);
}
